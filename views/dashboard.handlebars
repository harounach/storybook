<header class="dashboard-page__header appbar">
  <div class="appbar__section">
    <h1 class="appbar__app-name">Story Book</h1>
  </div>
  <div class="appbar__section">
    <nav class="appbar__nav">
      <a
        href="/dashboard"
        class="appbar__link appbar__link--active"
      >Dashboard</a>
      <a href="/stories" class="appbar__link">Public</a>
      <a href="/auth/logout" class="appbar__link appbar__link--right">Logout</a>
    </nav>
  </div>
</header>
<main class="dashboard-page__main main">
  <h3 class="title">Your list of stories</h3>
  <div class="story-grid">
    {{#each stories}}
      <!-- Card 1 -->
      <div class="story-card">
        <div class="story-card__section">
          <div class="story-card__avatar-wrapper">
            <img src="{{this.user.image}}" alt="" class="story-card__avatar" />
          </div>
        </div>
        <div class="story-card__section">
          <h3 class="story-card__title"> {{this.title}} </h3>
        </div>
        <div class="story-card__section">
          <p class="story-card__body">
            {{stripTags (truncate this.body 150)}}
          </p>
        </div>
        <div class="story-card__section">
          <div class="btn-group btn-group--right">
            <a href="/stories/{{this._id}}/view" class="btn btn--left">View</a>
            <a
              href="/stories/{{this._id}}/edit"
              class="btn btn--40 btn--bg-white btn--right-margin"
            >
              <img class="btn__icon" src="/images/edit_black_24dp.svg" alt="" />
            </a>
            <a
              href="/stories/{{this._id}}/delete"
              class="btn btn--40 btn--bg-white"
            >
              <img
                class="btn__icon"
                src="/images/delete_black_24dp.svg"
                alt=""
              />
            </a>
          </div>
        </div>
        <span
          class="story__status {{isPrivateStory this.status}}"
          title="{{capitalize this.status}} story"
        >{{this.status}}</span>
      </div>
    {{/each}}

  </div>

  <div class="btn-group">
    <a href="/stories/add" class="btn btn--fab">
      <img class="btn__icon" src="/images/add_white_24dp.svg" alt="" />
    </a>
  </div>
</main>
<footer class="dashboard-page__footer footer">
  <p class="footer__copyright">Copyright Haroun Ach 2021</p>
</footer>